<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required for network access -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Required for file system access -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Required for database file access -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Required for app data storage -->
    <key>com.apple.security.application-groups</key>
    <array>
        <string>com.rumankazi.noter</string>
    </array>
    
    <!-- Disable JIT for security -->
    <key>com.apple.security.cs.disable-executable-page-protection</key>
    <false/>
    
    <!-- Allow loading of unsigned libraries (if needed) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <false/>
    
    <!-- Required for Electron apps -->
    <key>com.apple.security.cs.allow-jit</key>
    <false/>
</dict>
</plist>
