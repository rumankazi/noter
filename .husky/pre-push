echo "🧪 Running tests before push..."
echo "📋 Running unit tests..."
pnpm test --passWithNoTests

echo "🎭 Running E2E tests..."
pnpm test:e2e

echo "🧪 Running tests before push..."
pnpm run test:unit
if [ $? -ne 0 ]; then
  echo "❌ Tests failed! Push cancelled."
  exit 1
fi
echo "✅ All tests passed! Proceeding with push..."
