{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "moduleResolution": "node"
    },
    "include": [
        "src/main/**/*",
        "src/shared/**/*"
    ],
    "exclude": [
        "src/renderer",
        "**/*.test.ts"
    ]
}
