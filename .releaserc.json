{
    "branches": [
        "main",
        "test-release"
    ],
    "preset": "conventionalcommits",
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "conventionalcommits",
                "releaseRules": [
                    {
                        "type": "feat",
                        "release": "minor"
                    },
                    {
                        "type": "fix",
                        "release": "patch"
                    },
                    {
                        "type": "perf",
                        "release": "patch"
                    },
                    {
                        "type": "revert",
                        "release": "patch"
                    },
                    {
                        "type": "docs",
                        "release": false
                    },
                    {
                        "type": "style",
                        "release": false
                    },
                    {
                        "type": "refactor",
                        "release": "patch"
                    },
                    {
                        "type": "test",
                        "release": false
                    },
                    {
                        "type": "build",
                        "release": false
                    },
                    {
                        "type": "ci",
                        "release": false
                    },
                    {
                        "type": "chore",
                        "release": false
                    },
                    {
                        "breaking": true,
                        "release": "major"
                    }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "presetConfig": {
                    "types": [
                        {
                            "type": "feat",
                            "section": "‚ú® Features"
                        },
                        {
                            "type": "fix",
                            "section": "üêõ Bug Fixes"
                        },
                        {
                            "type": "perf",
                            "section": "‚ö° Performance Improvements"
                        },
                        {
                            "type": "revert",
                            "section": "‚è™ Reverts"
                        },
                        {
                            "type": "refactor",
                            "section": "‚ôªÔ∏è Code Refactoring"
                        },
                        {
                            "type": "docs",
                            "section": "üìö Documentation",
                            "hidden": false
                        },
                        {
                            "type": "style",
                            "section": "üíÑ Styles",
                            "hidden": true
                        },
                        {
                            "type": "chore",
                            "section": "üîß Chores",
                            "hidden": true
                        },
                        {
                            "type": "test",
                            "section": "‚úÖ Tests",
                            "hidden": true
                        },
                        {
                            "type": "build",
                            "section": "üì¶ Build System",
                            "hidden": true
                        },
                        {
                            "type": "ci",
                            "section": "üë∑ CI/CD",
                            "hidden": true
                        }
                    ]
                }
            }
        ],
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "CHANGELOG.md",
                "changelogTitle": "# Changelog\n\nAll notable changes to Noter will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html)."
            }
        ],
        [
            "@semantic-release/npm",
            {
                "npmPublish": false
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "package.json",
                    "CHANGELOG.md"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ],
        [
            "@semantic-release/github",
            {
                "assets": [
                    {
                        "path": "release/*-mac-*.dmg",
                        "label": "macOS Installer (${nextRelease.gitTag})"
                    },
                    {
                        "path": "release/*-mac-*.zip",
                        "label": "macOS Archive (${nextRelease.gitTag})"
                    },
                    {
                        "path": "release/*-win-*.exe",
                        "label": "Windows Installer (${nextRelease.gitTag})"
                    },
                    {
                        "path": "release/*-portable.exe",
                        "label": "Windows Portable (${nextRelease.gitTag})"
                    },
                    {
                        "path": "release/*-linux-*.AppImage",
                        "label": "Linux AppImage (${nextRelease.gitTag})"
                    },
                    {
                        "path": "release/*-linux-*.deb",
                        "label": "Linux DEB Package (${nextRelease.gitTag})"
                    },
                    {
                        "path": "release/*-linux-*.rpm",
                        "label": "Linux RPM Package (${nextRelease.gitTag})"
                    }
                ],
                "successComment": "üéâ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version}\n\n**Downloads:**\n- üçé macOS: `.dmg` installer or `.zip` archive\n- ü™ü Windows: `.exe` installer or portable executable\n- üêß Linux: `.AppImage` (universal), `.deb` (Debian/Ubuntu), or `.rpm` (RedHat/Fedora)",
                "labels": [
                    "released"
                ],
                "releasedLabels": [
                    "released<%= nextRelease.channel ? `-${nextRelease.channel}` : \"\" %>@${nextRelease.version}"
                ]
            }
        ]
    ]
}
