{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDisabled"
  ],
  "schedule": [
    "before 6am on monday"
  ],
  "timezone": "America/New_York",
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "packageRules": [
    {
      "description": "Auto-merge non-major updates for dev dependencies",
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "requiredStatusChecks": null
    },
    {
      "description": "Auto-merge patch updates for production dependencies",
      "matchDepTypes": [
        "dependencies"
      ],
      "matchUpdateTypes": [
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "requiredStatusChecks": null
    },
    {
      "description": "Group all non-major dev dependencies",
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "dev dependencies (non-major)"
    },
    {
      "description": "Group all patch updates for production dependencies",
      "matchDepTypes": [
        "dependencies"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "production dependencies (patch)"
    },
    {
      "description": "Group TypeScript ecosystem updates",
      "matchPackagePatterns": [
        "^@types/",
        "typescript",
        "ts-",
        "tsx"
      ],
      "groupName": "TypeScript ecosystem"
    },
    {
      "description": "Group ESLint ecosystem updates",
      "matchPackagePatterns": [
        "eslint",
        "^@typescript-eslint/"
      ],
      "groupName": "ESLint ecosystem"
    },
    {
      "description": "Group Vite ecosystem updates",
      "matchPackagePatterns": [
        "vite",
        "^@vitejs/"
      ],
      "groupName": "Vite ecosystem"
    },
    {
      "description": "Group testing ecosystem updates",
      "matchPackagePatterns": [
        "vitest",
        "playwright",
        "^@playwright/",
        "jsdom"
      ],
      "groupName": "Testing ecosystem"
    },
    {
      "description": "Group Electron ecosystem updates",
      "matchPackagePatterns": [
        "electron",
        "^@electron/",
        "electron-builder"
      ],
      "groupName": "Electron ecosystem"
    },
    {
      "description": "Group React ecosystem updates",
      "matchPackagePatterns": [
        "react",
        "^@types/react"
      ],
      "groupName": "React ecosystem"
    },
    {
      "description": "Group Tailwind CSS ecosystem updates",
      "matchPackagePatterns": [
        "tailwindcss",
        "^@tailwindcss/"
      ],
      "groupName": "Tailwind CSS ecosystem"
    },
    {
      "description": "Group semantic-release ecosystem updates",
      "matchPackagePatterns": [
        "semantic-release",
        "^@semantic-release/"
      ],
      "groupName": "Semantic Release ecosystem"
    },
    {
      "description": "Separate major updates (require manual review)",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "groupName": "major updates",
      "addLabels": [
        "major-update",
        "needs-review"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "automerge": true,
    "schedule": [
      "at any time"
    ]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": [
      "before 6am on monday"
    ]
  },
  "labels": [
    "dependencies",
    "renovate"
  ],
  "commitMessagePrefix": "chore(deps): ",
  "semanticCommits": "enabled"
}
