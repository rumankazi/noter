{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDisabled"
  ],
  "schedule": [
    "before 6am on monday"
  ],
  "timezone": "America/New_York",
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "packageRules": [
    {
      "description": "Auto-merge non-major updates for dev dependencies",
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true
    },
    {
      "description": "Auto-merge patch updates for production dependencies",
      "matchDepTypes": [
        "dependencies"
      ],
      "matchUpdateTypes": [
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true
    },
    {
      "description": "Group all non-major dev dependencies",
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "dev dependencies (non-major)"
    },
    {
      "description": "Group all patch updates for production dependencies",
      "matchDepTypes": [
        "dependencies"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "production dependencies (patch)"
    },
    {
      "description": "Group TypeScript ecosystem updates",
      "groupName": "TypeScript ecosystem",
      "matchPackageNames": [
        "/^@types//",
        "/typescript/",
        "/ts-/",
        "/tsx/"
      ]
    },
    {
      "description": "Group ESLint ecosystem updates",
      "groupName": "ESLint ecosystem",
      "matchPackageNames": [
        "/eslint/",
        "/^@typescript-eslint//"
      ]
    },
    {
      "description": "Group Vite ecosystem updates",
      "groupName": "Vite ecosystem",
      "matchPackageNames": [
        "/vite/",
        "/^@vitejs//"
      ]
    },
    {
      "description": "Group testing ecosystem updates",
      "groupName": "Testing ecosystem",
      "matchPackageNames": [
        "/vitest/",
        "/playwright/",
        "/^@playwright//",
        "/jsdom/"
      ]
    },
    {
      "description": "Group Electron ecosystem updates",
      "groupName": "Electron ecosystem",
      "matchPackageNames": [
        "/electron/",
        "/^@electron//",
        "/electron-builder/"
      ]
    },
    {
      "description": "Group React ecosystem updates",
      "groupName": "React ecosystem",
      "matchPackageNames": [
        "/react/",
        "/^@types/react/"
      ]
    },
    {
      "description": "Group Tailwind CSS ecosystem updates",
      "groupName": "Tailwind CSS ecosystem",
      "matchPackageNames": [
        "/tailwindcss/",
        "/^@tailwindcss//"
      ]
    },
    {
      "description": "Group semantic-release ecosystem updates",
      "groupName": "Semantic Release ecosystem",
      "matchPackageNames": [
        "/semantic-release/",
        "/^@semantic-release//"
      ]
    },
    {
      "description": "Separate major updates (require manual review)",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "groupName": "major updates",
      "addLabels": [
        "major-update",
        "needs-review"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "automerge": true,
    "schedule": [
      "at any time"
    ]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": [
      "before 6am on monday"
    ]
  },
  "labels": [
    "dependencies",
    "renovate"
  ],
  "commitMessagePrefix": "chore(deps): ",
  "semanticCommits": "enabled"
}
